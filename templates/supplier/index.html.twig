{% extends 'base.html.twig' %}

{% block title %}Supplier index{% endblock %}

{% block body %}
    <h1>Supplier index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Company</th>
            <th>Name</th>
            <th>Activityity</th>
            <th>Tax_number</th>
            <th>phone</th>
            <th>Address</th>
            <th>Email</th>
            <th>id_purchase</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.company }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.activity }}</td>
                <td>{{ article.tax_number }}</td>
                <td>{{ article.phone }}</td>
                <td>{{ article.address }}</td>
                <td>{{ article.email }}</td>
                <td>{{ article.purchase.id }}</td>
                <td>
                    <a href="{{ path('supplier_show', {'id': supplier.id}) }}">show</a>
                    <a href="{{ path('supplier_edit', {'id': supplier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('supplier_new') }}">Create new</a>
{% endblock %}
